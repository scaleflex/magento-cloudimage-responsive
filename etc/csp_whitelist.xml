<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="cloudimage" type="host">*.cloudimg.io</value>
                <value id="scaleflex" type="host">*.scaleflex.it</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="cloudimage" type="host">*.cloudimg.io</value>
                <value id="scaleflex" type="host">*.scaleflex.it</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="cloudimage-img" type="host">*.cloudimg.io</value>
            </values>
      </policy>
    </policies>
</csp_whitelist>
